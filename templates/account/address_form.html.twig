{% extends 'base.html.twig' %}

{% block title %}Ajouter une addresse- Votre site d'e_commerce{% endblock %}

{% block content %}


    <h1>Ajouter une addresse</h1>
    <a href="{{ path('account_address') }}">retour</a><br>
    <hr>
   {{ form_start(form) }}

    <div class="row">
        <div class="col-md-12"{{ form_row(form.name) }}
        <div class="col-md-6"{{ form_row(form.firstname) }}
        <div class="col-md-6"{{ form_row(form.lastname) }}
        <div class="col-md-6"{{ form_row(form.company) }}
        <div class="col-md-6"{{ form_row(form.adress) }}
        <div class="col-md-6"{{ form_row(form.postal) }}
        <div class="col-md-6"{{ form_row(form.city) }}
        <div class="col-md-6"{{ form_row(form.country) }}
        <div class="col-md-6"{{ form_row(form.phone) }}
        <div> </div><br><br>
    </div>
    {{ form_end(form) }}
{% endblock %}
